<link rel="stylesheet" href="../../public/css/main.css">
<!-- views/allposts.handlebars -->
    <div class="container">
      <h1>All Posts</h1>
      {{#if posts}}
        
          {{#each posts}}
          <article class="card">
            <div>
            <h2>
              <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
              Posted By: {{User.username}} on {{createdAt}}
            </div>
            </div>
            <div class="card-body">
              {{body}}
            </div>
          </article>
          {{/each}}
      
      {{else}}
        <p>No posts found.</p>
      {{/if}}
    </div>

