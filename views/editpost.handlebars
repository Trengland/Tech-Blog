{{!-- // This is a form that allows users to edit an existing blog post. --}}
  <div class="container">
    <h2 class="text-center mb-4">Edit Post</h2>
    <form id="edit-post-form" class="card-body">
      <input type="hidden" name="id" value="{{post.id}}">

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="{{post.title}}">
      </div>
      
      <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" id="body" name="body" rows="10">{{post.body}}</textarea>
      </div>

      <button type="submit" class="btn btn-primary">Save Changes</button>
      <button type="button" class="btn btn-danger" id="delete-post">Delete Post</button>
    </form>
  </div>
  

  <script src="/js/edit.js"></script>
